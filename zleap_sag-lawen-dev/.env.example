# DataFlow Environment Configuration

# ======================
# Application Configuration
# ======================
# DEBUG=true
# LOG_LEVEL=INFO
# LOG_FORMAT=json

# ======================
# Database Configuration
# ======================
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=dataflow
MYSQL_PASSWORD=dataflow_pass
MYSQL_DATABASE=dataflow

# ======================
# Elasticsearch Configuration
# ======================
# 注意：当前ES配置禁用了安全功能，不需要密码
ES_HOST=localhost
ES_PORT=9200
ELASTIC_PASSWORD=dataflow_pass


# ====================
# LLM Configuration 
# ====================
# API 基础配置
LLM_API_KEY=sk-xxx
LLM_MODEL=sophnet/Qwen3-30B-A3B-Instruct-2507
LLM_BASE_URL=https://api.302.ai/v1
# LLM_LANGUAGE=en

# LLM 行为参数（所有调用的默认值）
# LLM_TEMPERATURE=0.7            # 🆕 温度：0.0-2.0
# LLM_MAX_TOKENS=12000           # 🆕 最大输出token数（改大避免截断）
# LLM_TOP_P=1.0                  # 🆕 top_p参数
# LLM_FREQUENCY_PENALTY=0.0      # 🆕 频率惩罚
# LLM_PRESENCE_PENALTY=0.0       # 🆕 存在惩罚

# LLM 可靠性参数
# LLM_TIMEOUT=180                # 超时时间(秒)
# LLM_MAX_RETRIES=3              # 最大重试次数


# LLM 语言配置
# LLM_LANGUAGE=zh                 # 输出语言：zh(中文,默认) / en(English)
                                  # 决定加载 prompts/ 或 prompts/en/ 下的提示词
# 数据库配置开关
# USE_DB_CONFIG=true   

# ======================
# Embedding Configuration
# ======================
EMBEDDING_API_KEY=sk-xxx
EMBEDDING_MODEL_NAME=Qwen/Qwen3-Embedding-0.6B
EMBEDDING_BASE_URL=https://api.302.ai

# ======================
# Performance Configuration
# ======================
# Database connection pool
# DB_POOL_SIZE=10
# DB_MAX_OVERFLOW=20
# DB_POOL_RECYCLE=3600

# Cache TTL (seconds)
# CACHE_ENTITY_TTL=86400
# CACHE_LLM_TTL=604800
# CACHE_SEARCH_TTL=3600


# API 配置
# API_HOST=0.0.0.0
# API_PORT=8000
# API_WORKERS=4
# DEBUG=false

# 文件上传
# UPLOAD_DIR=./uploads
# MAX_UPLOAD_SIZE=104857600  # 100MB

# 测试数据集
# HotpotQA 数据集路径（根据你的本地路径修改）
HOTPOTQA_DATASET_PATH=PATH_TO_DATASET
